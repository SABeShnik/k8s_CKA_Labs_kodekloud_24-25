apiVersion: v1
kind: Pod
metadata:
  name: critical-app
  namespace: default
spec:
  containers:
  - image: nginx
    name: critical-container
    resources:
      limits:
        memory: 3Gi
      requests:
        cpu: "1"
        memory: 3Gi
    volumeMounts:
    - mountPath: /var/run/secrets/kubernetes.io/serviceaccount
      name: kube-api-access-nsld8
      readOnly: true
  priorityClassName: high-priority
  priority: 100000
  preemptionPolicy: PreemptLowerPriority
  dnsPolicy: ClusterFirst
  volumes:
  - name: kube-api-access-nsld8
    projected:
      defaultMode: 420
      sources:
      - serviceAccountToken:
          expirationSeconds: 3607
          path: token
      - configMap:
          items:
          - key: ca.crt
            path: ca.crt
          name: kube-root-ca.crt
      - downwardAPI:
          items:
          - fieldRef:
              apiVersion: v1
              fieldPath: metadata.namespace
            path: namespace